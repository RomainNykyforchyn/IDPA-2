@{
    ViewBag.Title = "AddOffer";
}

<h2>AddOffer</h2>
<form method="post">
    <p>Provider?</p>
    <input type="text" value="provider" id="provider" required />
    <br>
    <p>Name?</p>
    <input type="text" value="name" id="name" required />
    <br>
    <p>Ort?</p>
    <input type="text" value="location" id="location" required />
    <br>
    <p>Internet?</p>
    <input type="text" value="internet" id="internet" required />
    <br>
    <p>Geschwindigkeit in G?</p>
    <input type="number" value="speed" id="speed" required />
    <br>
    <p>Telefon?</p>
    <input type="number" value="telephone" id="telephone" required />
    <br>
    <p>Preis pro Monat?</p>
    <input type="number" value="price" id="price" required />
    <br>
    <p>Preis2 pro Monat?</p>
    <input type="number" value="price2" id="price2" required />
    <br>
    <p>Mindestlaufzeit in ganzen Monaten?</p>
    <input type="text" value="minimumTime" id="minimumTime" required />
    <br>
    <p>Zusatz?</p>
    <input type="text" value="addition" id="addition" required />
    <br>
    <input type="submit" value="Submit" class="submit" />
</form>
